<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/order_name_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="苹果"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/cs_dp_10"/>

        <TextView
            android:id="@+id/order_count_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:minWidth="40dp"
            android:text="x1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/order_price_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:minWidth="50dp"
            android:text="￥ 230"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/order_delete_btn"
            android:layout_width="@dimen/cs_dp_36"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_delete"
            android:paddingRight="@dimen/cs_dp_10"/>
    </LinearLayout>

</FrameLayout>